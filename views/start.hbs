{{> menu}}

<section class="ui one column grid segment">
  <div class="ui sixteen wide column">
    <h2 class="ui header">
      Welcome to the CinemApp, {{fullname}}!
    </h2>
     
        <!-- Slideshow container -->
    <div class="slideshow-container">

      <!-- Full-width images with number and caption text -->
